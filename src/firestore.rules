
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'admin' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles;
    }
    
    function isSellerForShop(shopId) {
      return exists(/databases/$(database)/documents/shops/$(shopId)) &&
             request.auth.uid in get(/databases/$(database)/documents/shops/$(shopId)).data.ownerIds;
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow read, write: if isAdmin();
      
      // Rule for notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    match /users/{document=**} {
      allow read: if isAdmin();
    }
    
    match /orders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId || isAdmin() || isSellerForShop(resource.data.sellerId);
      
      // User can update their own order to cancel it, or to request a return.
      allow update: if request.auth.uid == resource.data.userId &&
                       ((request.resource.data.status == 'Cancelled' && resource.data.status == 'Pending Confirmation') ||
                        (request.resource.data.status == 'Return Requested' && resource.data.status == 'Delivered'));
                       
      // Sellers can update orders for their shop
      allow update: if isSellerForShop(resource.data.sellerId);
      
      // Admins have full access
      allow update, delete: if isAdmin();
    }
    
    match /queries/{queryId} {
      allow create: if request.auth.uid != null;
      allow read: if isAdmin();
    }
    
    match /paperSamples/{sampleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /brands/{brandId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /authors/{authorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /productTypes/{typeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /shops/{shopId} {
        allow read: if true;
        allow write: if isAdmin();
    }
     match /xeroxServices/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
     }
     match /homepageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
     }
    match /orderSettings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /paperTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /bindingTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /laminationTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
