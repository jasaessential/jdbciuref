
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             'admin' in get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles;
    }

    // Users collection
    match /users/{userId} {
      // Allow users to read and write to their own profile, including the cart.
      allow read, write: if request.auth.uid == userId;
      // Allow admins to read/write any user profile
      allow read, write: if isAdmin();
    }
    
    match /users/{document=**} {
        // Allow admins to read all user data
        allow read: if isAdmin();
    }

    // Public read-only collections
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /brands/{brandId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /authors/{authorId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /productTypes/{typeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /shops/{shopId} {
        allow read: if true;
        allow write: if isAdmin();
    }
     match /xeroxServices/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
     match /homepageContent/{docId} {
      allow read: if true;
      allow write: if isAdmin();
     }
    match /orderSettings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Xerox Form Option Collections
    match /paperTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /colorOptions/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /formatTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /printRatios/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /bindingTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    match /laminationTypes/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
